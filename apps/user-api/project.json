{
  "name": "user-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/user-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "user-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "user-api:build:development"
        },
        "production": {
          "buildTarget": "user-api:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "migration-create": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx typeorm migration:create ./apps/user-api/src/migrations/migrations/ -o"
      }
    },
    "migration-generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": [
          "npx typeorm migration:run ./apps/user-api/src/migrations/migration -d ./dist/libs/product-domain/backend/src/user/infrastructure/config/nest-typeorm.ds.config.js"
        ]
      },
      "dependsOn": ["build"]
    }
  }
}
